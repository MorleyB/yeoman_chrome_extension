{
    "name": "touchStream",
    "version": "1.0",
    "manifest_version": 2,
    "description": "Touchstream provides an efficient method of maintaining strong relationships with clients.",
    "icons": {
        "16": "images/icon.png",
        "128": "images/icon.png"
    },
    "default_locale": "en",
    "background": {
        "scripts": [
          "scripts/static/jquery.min.js",  
          "scripts/chromereload.js",
          "scripts/background.js"
        ]
    },
  "browser_action": {
    "default_icon": {
      "19": "images/icon.png",
      "38": "images/icon.png"
    },
    "default_title": "touchStream",
    "default_popup": "popup.html"
  },
  "content_scripts": [
  {
    "matches": ["https://mail.google.com/mail/u/*/*"],
    "css": ["styles/inject.css"],
    "js": ["scripts/static/jquery.min.js", "scripts/content.js"],
    "all_frames": true,
    "run_at": "document_end"
  }
  ],
  "permissions": [
    "tabs",
    "http://*/*",
    "https://*/*"
  ]
}
